<div class="col-md-4">
  <div class="form-group">
    <%= form_for [@user, Item.new] do |f| %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Add another item" %>
      
  </div>
  <div class="form-group">
    <%= f.submit "Submit item", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

